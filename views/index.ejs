<img src="https://images.squarespace-cdn.com/content/v1/5879f7763a0411c5027f0055/1532487269160-6WPA9VR29GGSS7PNH0Z0/Chantelle_Grady_Nature.jpg"
    alt="The calming effect of nature" class="nature_img" width="981" height="587">

<section class="articles">
    <h2 class="article__heading">Latest Post</h2>
    
    <ul class="article-ul">

        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%-post._id  %>">
                    <span><%-post.title %></span>
                    <span class="article_list_date"><%-post.createdAt.toDateString() %></span>
                </a>
            </li>

            <% }) %>
    </ul>

    <div class="page">
        <% if (nextPage !==null) { %>
            <a href="/?page=<%- nextPage %>" class="pagination">&lt; View Older Posts</a>
            <% } %>
                <% if (current> 1) { %>
                    <a href="/?page=<%- current - 1 %>" class="pagination">View Newer Posts &gt;</a>
                    <% } %>
    </div>

</section>